<LobbyScreen>:
    player_list: player_list
    challenge_list: challenge_list
    match_list: match_list
    lobby_code: lobby_code
    name: 'Lobby'
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        Image:
            source: cfg.find_img('lobby_bg.png')
