<MainScreen>:
    name: 'Main'
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        Image:
            source: cfg.find_img('main_bg.png')
        Image:
            source: 'res/gradient.png'
        Label:
            size_hint: (0.975,1.875)
            text_size: self.size
            halign: 'left'
            valign: 'center'
            text: lang.localize("HEADER_MAIN")
            font_name: 'res/texgyreheros-bolditalic.otf'
            font_size: 20
            outline_width: 2
        BoxLayout:
            orientation: 'vertical'
            GridLayout:
                size_hint: (0.6183, 1)
                cols: 1
                padding: (0,50)
                spacing: [0,5]
                MenuBtn:
                    text: '1. %s' % lang.localize("MAIN_MENU_ONLINE")
                    on_release: app.sm.current = 'Online'
                MenuBtn:
                    text: '2. %s' % lang.localize("MAIN_MENU_LOCAL_VS")
                    on_release: app.MainScreen.local()
                MenuBtn:
                    text: '3. %s' % lang.localize("MAIN_MENU_TOURNAMENT_VS")
                    on_release: app.MainScreen.tournament()
                MenuBtn:
                    text: '4. %s' % lang.localize("MAIN_MENU_RESOURCES")
                    on_release: app.sm.current = 'Resources'
                MenuBtn:
                    text: '5. %s' % lang.localize("MAIN_MENU_OPTIONS")
                    on_release: app.OptionScreen.load()
                MenuBtn:
                    text: '6. %s' % lang.localize("MAIN_MENU_ABOUT")
                    on_release: app.sm.current = 'About'
                MenuBtn:
                    text: '7. %s' % lang.localize("MAIN_MENU_UPDATE")
                    on_release: root.update()
        Image:
            source: cfg.find_img('main.png')
        Label:
            id: version
            size_hint: (0.97,0.075)
            text_size: self.size
            halign: 'left'
            valign: 'center'
            text: 'Version'
            font_name: 'res/texgyreheros-bolditalic.otf'
            font_size: 12
            outline_width: 2
        BoxLayout:
            size_hint: (0.2, 0.075)
            Label:
                text: cfg.img_credit('main.png','[ref=x]Bee Chan[/ref]')
                outline_width: 2
                markup: True
                font_name: 'res/texgyreheros-bolditalic.otf'
                font_size: 12
                on_ref_press: webbrowser.open('https://twitter.com/Bee_Sempai')
    AnchorLayout
        id: lobbyAnchor
        anchor_x: 'center'
        anchor_y: 'top'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        BoxLayout:
            padding: 0,30
            DummyBtn:
                id: welcome
                text: lang.localize("MAIN_MENU_WELCOME")

