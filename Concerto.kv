<MenuBtn>
    text_size: self.size
    halign: 'left'
    valign: 'middle'
    size_hint_y: None
    height: 36
    padding_x: 50
    background_normal: 'res/menubtn.png'
    outline_width: 2
    on_press: self.background_color = (135/255,195/255,255/255, 1)
    on_release: self.background_color = (1, 1, 1, 1)
    
<PlayerRow>
    size_hint_y: None
    height: 32
    canvas.before:
        Color:
            rgba: (0,0,0,0.2)
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        rows: 1
        Button:
            size_hint_x: 0.8
            id: PlayerBtn
            outline_width: 2
            font_name: 'res/texgyreheros-bolditalic.otf' 
            background_color: (0, 0, 0, 0)
            on_press: self.background_color = (135/255,195/255,255/255, 1)
            on_release: self.background_color = (0, 0, 0, 0)
            text_size: self.size
            halign: 'left'
            valign: 'center'
            padding_x: 50
        Button:
            size_hint_x: 0.2
            id: WatchBtn
            outline_width: 2
            font_name: 'res/texgyreheros-bolditalic.otf' 
            background_color: (0, 0, 0, 0)
            on_press: self.background_color = (135/255,195/255,255/255, 1)
            on_release: self.background_color = (0, 0, 0, 0)
            text_size: self.size
            halign: 'right'
            valign: 'center'
            padding_x: 10

<DummyBtn>
    text_size: self.size
    halign: 'center'
    valign: 'middle'
    size_hint_y: None
    height: 32
    padding_x: 50
    outline_width: 2
    font_name: 'res/texgyreheros-bolditalic.otf'
    background_normal: ''
    background_color: (0,0,0,0.3)

<LobbyBtn>:
    text: 'LOBBY'
    size_hint_x: 0.25
    size_hint_y: None
    height: 36
    outline_width: 2
    font_name: 'res/texgyreheros-bolditalic.otf'
    background_color: (255, 0, 0, 0.2)
    background_normal: ''
    on_release: 
        self.background_color = (255, 0, 0, 0.2)
    on_press: 
        self.background_color = (100, 0, 0, 0.9)  

<SpinnerOption>:
    text_size: self.size
    halign: 'center'
    valign: 'middle'
    background_color: '#210205'
    height: 28
    background_normal: ''

<Spinner>:
    text_size: self.size
