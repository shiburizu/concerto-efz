                        id: challenge_list
                        cols: 1
                        height: self.minimum_height
                        size_hint_x: 1
                        size_hint_y: None
                        spacing: [0,2]
                    GridLayout:
                        id: player_list
                        cols: 1
                        height: self.minimum_height
                        size_hint_x: 1
                        size_hint_y: None
                        spacing: [0,2]
