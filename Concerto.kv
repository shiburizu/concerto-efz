                    size_hint_x: 0.348
                    padding_x: 25
                    text: lang.localize("TERM_LEAVE").upper()
                    on_release: 
                        root.exit()
                DummyBtn:
                    size_hint_x: 0.58
                    id: lobby_code
                    text: 'Lobby ID: 1234'
                    padding_x: 15
                    text_size: self.size
                    halign: 'right'
                    valign: 'middle'
                    background_color: (0,0,0,0)
                    on_release: root.invite_link()
            ScrollView:
                size_hint: (1,0.9)
                do_scroll_x: False
                do_scroll_y: True
                GridLayout:
                    height: self.minimum_height
                    size_hint_y: None
                    size_hint_x: 1
                    cols: 1
                    spacing: [0,2]
